<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2"><%= t(".title") %></h1>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0"><%= pluralize(@users.count, "User") %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <% if @users.any? %>
        <% @users.each do |user| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <%= link_to user.full_name, store_user_path(user), class: "text-dark fw-bold" %>
              <div class="text-muted"><%= user.email_address %></div>
            </div>
            <div>
              <span class="badge bg-<%= user.admin? ? "primary" : "secondary" %> me-2">
                <%= user.admin? ? "Admin" : "User" %>
              </span>
              <%= link_to "View", store_user_path(user), class: "btn btn-sm btn-outline-primary" %>
            </div>
          </li>
        <% end %>
      <% else %>
        <li class="list-group-item text-center text-muted"><%= t(".no_users") %></li>
      <% end %>
    </ul>
  </div>
</div>

