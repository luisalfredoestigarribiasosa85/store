<main class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= t(".title") %></h1>
    <%= link_to t(".new"), new_store_product_path, class: "btn btn-primary" %>
  </div>

  <% if @products.any? %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if product.featured_image.attached? %>
              <%= image_tag product.featured_image, class: "card-img-top", alt: product.name %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "card-img-top", alt: "No image" %>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><strong><%= t(".inventory") %>:</strong> <%= product.inventory_count %></p>
              <%= link_to t(".view"), store_product_path(product), class: "btn btn-outline-primary mt-auto" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card text-center">
      <div class="card-body">
        <p class="card-text"><%= t(".no_products") %></p>
        <%= link_to t(".create_one"), new_product_path, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</main>
